<div class="banner">
  <div class="container">
    <h1>My very own movie list !</h1>
  </div>
</div>
<div class="container">
  <h1>My Lists</h1>
    <div class="list">
      <% @lists.each do |list| %>
        <div>
        <p><%= link_to "Delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{list.name}?" }%></p>
        <div class="card-category">
        <%= link_to list.name, list_path(list) %>
        </div>
        </div>
      <% end %>
    </div>
</div>
